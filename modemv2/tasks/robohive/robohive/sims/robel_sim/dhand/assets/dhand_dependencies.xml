<?xml version="1.0"?>
<mujocoinclude>
  <compiler angle="radian" inertiafromgeom="auto" inertiagrouprange="4 5"/>
  <asset>
    <material name="visual_black" rgba=".2 .2 .2 1" shininess="0.8" specular=".5"/>
    <material name="visual_blue" rgba="0.1 0.4 0.9 1" shininess="0.5" specular=".5"/>
    <material name="visual_white" rgba="1 1 1 1" shininess="0.2" specular=".2"/>
    <material name="visual_chrome" rgba=".5 .5 .5 1" shininess="1" specular=".5" reflectance="1"/>
    <material name="collision_blue" rgba="0.3 0.3 1.0 0.5" shininess="0" specular="0"/>
  </asset>
  <default>
    <default class="dHand">
      <joint armature="0.001" damping="1" limited="true"/>
      <position ctrllimited="true" ctrlrange="0 1.57"/>
      <geom conaffinity="0" contype="0" group="1" material="visual_black" type="mesh"/>
      <site group="3"/>
      <default class="phys_metal">
        <geom conaffinity="1" contype="1" condim="4" margin="0.001" group="4" rgba="0.3 0.3 1.0 0.5"/>
      </default>
      <default class="ADB">
        <joint range="-.3 .3"/>
        <position kp="5" ctrlrange="-.3 .3"/>
      </default>
      <default class="MCP">
        <joint range="-.2 1.57"/>
        <position kp="5" ctrlrange="-.2 1.57"/>
      </default>
      <default class="PIP">
        <joint range="-.2 1.57"/>
        <position kp="5" ctrlrange="-.2 1.57"/>
      </default>
      <default class="DIP">
        <joint range="-.2 1.57"/>
        <position kp="5" ctrlrange="-.2 1.57"/>
      </default>
      <default class="WR">
        <joint damping="100" frictionloss="1"/>
        <position kp="1600" ctrlrange="-.2 1.57"/>
      </default>
    </default>
  </default>
  <asset>
    <mesh file="../robel_sim/dhand/meshes/bracket1.stl" name="bracket1"/>
    <mesh file="../robel_sim/dhand/meshes/bracket2.stl" name="bracket2"/>
    <mesh file="../robel_sim/dhand/meshes/finger.stl" name="finger"/>
    <mesh file="../robel_sim/dhand/meshes/H-540.stl" name="H-540"/>
    <mesh file="../robel_sim/dhand/meshes/knuckle.stl" name="knuckle"/>
    <mesh file="../robel_sim/dhand/meshes/motor.stl" name="motor"/>
    <mesh file="../robel_sim/dhand/meshes/PalmInterior.stl" name="PalmInterior"/>
    <mesh file="../robel_sim/dhand/meshes/Palmplate.stl" name="Palmplate"/>
    <mesh file="../robel_sim/dhand/meshes/topPlate.stl" name="topPlate"/>
    <mesh file="../robel_sim/dhand/meshes/thumb_bracket.stl" name="thumb_bracket"/>
    <mesh file="../robel_sim/dhand/meshes/wristbracket1.stl" name="wristbracket1"/>
    <mesh file="../robel_sim/dhand/meshes/wristbracket2.stl" name="wristbracket2"/>
    <mesh file="../robel_sim/dhand/meshes/wristmount.stl" name="wristmount"/>
  </asset>
  <actuator>
    <position joint="FF_ADB" name="FF_ADB" class="ADB"/>
    <position joint="FF_MCP" name="FF_MCP" class="MCP"/>
    <position joint="FF_PIP" name="FF_PIP" class="PIP"/>
    <position joint="FF_DIP" name="FF_DIP" class="DIP"/>
    <position joint="MF_ADB" name="MF_ADB" class="ADB"/>
    <position joint="MF_MCP" name="MF_MCP" class="MCP"/>
    <position joint="MF_PIP" name="MF_PIP" class="PIP"/>
    <position joint="MF_DIP" name="MF_DIP" class="DIP"/>
    <position joint="PF_ADB" name="PF_ADB" class="ADB"/>
    <position joint="PF_MCP" name="PF_MCP" class="MCP"/>
    <position joint="PF_PIP" name="PF_PIP" class="PIP"/>
    <position joint="PF_DIP" name="PF_DIP" class="DIP"/>
    <position joint="TF_MCP" name="TF_MCP" class="MCP"/>
    <position joint="TF_ADB" name="TF_ADB" class="ADB" ctrlrange="-2.57 .57"/>
    <position joint="TF_PIP" name="TF_PIP" class="PIP"/>
    <position joint="TF_DIP" name="TF_DIP" class="DIP"/>
  </actuator>
</mujocoinclude>
